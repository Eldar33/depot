<ul>
  <% @support_requests.each do |sr| %>
    <li>
      <h1>
        On <%= sr.created_at.to_formatted_s(:long) %>
        <code><%= sr.email %></code> writes:
      </h1>
      <p>
      <blockquote>
        <h2><%= sr.subject %></h2>
        <%= sr.body %>
      </blockquote>
      </p>
      <% if sr.order %>
        <h3>Recent Order</h3>
        <dl>
          <dt>Name</dt>
          <dd><%= sr.order.name %></dd>

          <dt>Email</dt>
          <dd><%= sr.order.email %></dd>

          <dt>Address</dt>
          <dd><%= sr.order.address %></dd>

          <dt>PayType</dt>
          <dd><%= sr.order.pay_type %></dd>

          <dt>Line Items</dt>
          <dd>
            <ul>
              <% sr.order.line_items.each do |line_item| %>
                <li>
                  <%= line_item.product.title %>
                  (<%= line_item.product.price %>)
                </li>
              <% end %>
            </ul>
          </dd>
        </dl>
      <% else %>
        <h3 class="notice">No associated order</h3>
      <% end %>

      <% if sr.response.blank? %>
        <%= form_with(model: sr, local: true, class: "depot_form") do |form| %>
          <div class="field">
            <%= form.label :response, "Write Response" %>
            <%= form.rich_text_area :response, id: :support_request_response %>
          </div>
          <div class="actions">
            <%= form.submit "Send Response" %>
          </div>
        <% end %>
      <% else %>
        <h4>Our response</h4>
        <p>
          <blockquote>
            <%= sr.response %>
          </blockquote>
        </p>
      <% end %>

      <hr>
    </li>
  <% end %>
</ul>
